#include <stdio.h>

int calcNilai(int tugas, int quiz, int UTS, int UAS) {
    return (tugas * 10 / 100) + (quiz * 20 / 100) + (UTS * 30 / 100) + (UAS * 40 / 100);
}

void displayNilaiAkhir(char nama[], char NIM[], int nilaiAkhir) {
    char *hurufMutu;
    char *keterangan;

    if (nilaiAkhir > 90) {
        hurufMutu = "A";
        keterangan = "Lulus";
    } else if (nilaiAkhir > 81) {
        hurufMutu = "AB";
        keterangan = "Lulus";
    } else if (nilaiAkhir > 71) {
        hurufMutu = "B";
        keterangan = "Lulus";
    } else if (nilaiAkhir > 61) {
        hurufMutu = "BC";
        keterangan = "Lulus";
    } else if (nilaiAkhir > 51) {
        hurufMutu = "C";
        keterangan = "Lulus";
    } else if (nilaiAkhir > 45) {
        hurufMutu = "D";
        keterangan = "Tidak Lulus";
    } else {
        hurufMutu = "E";
        keterangan = "Tidak Lulus";
    }

    printf("Nama Mahasiswa: %s\n", nama);
    printf("NIM: %s\n", NIM);
    printf("Nilai Akhir: %d\n", nilaiAkhir);
    printf("Huruf Mutu: %s\n", hurufMutu);
    printf("Keterangan: %s\n", keterangan);
}

int main() {
    char nama[50];
    char NIM[20];
    int tugas, quiz, UTS, UAS;

    printf("Masukkan Nama: ");
    scanf("%s", nama);
    printf("Masukkan NIM: ");
    scanf("%s", NIM);
    printf("Masukkan Nilai Tugas: ");
    scanf("%d", &tugas);
    printf("Masukkan Nilai Quiz: ");
    scanf("%d", &quiz);
    printf("Masukkan Nilai UTS: ");
    scanf("%d", &UTS);
    printf("Masukkan Nilai UAS: ");
    scanf("%d", &UAS);

    int nilaiAkhir = calcNilai(tugas, quiz, UTS, UAS);
    displayNilaiAkhir(nama, NIM, nilaiAkhir);

    return 0;
}
